                        android:textSize="20sp"/>

                <ImageView
                        android:id="@+id/currencycount6_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_thumb_down_black_48dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>