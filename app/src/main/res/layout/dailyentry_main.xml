            </LinearLayout>
        </LinearLayout>

        <!--500 INR -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="2dp">

            <ImageView
                    android:id="@+id/currency_img_5"
                    android:layout_width="match_parent"
